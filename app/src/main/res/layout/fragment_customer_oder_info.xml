<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customer.CustomerOderInfoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info_food_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="26sp"
        android:text="Hotdog"
        android:layout_margin="10dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nechta"
            android:textSize="24sp"
            android:inputType="number"
            android:layout_margin="10dp"
            android:textColor="@color/black"


            app:layout_constraintTop_toBottomOf="@id/info_food_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/info_its_number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MFY , Ko'cha nomi, Uy nomeri"
            android:textSize="20sp"
            android:inputType="text"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/info_its_number"
            app:layout_constraintLeft_toLeftOf="parent"

            android:textColor="@color/black"
            android:id="@+id/info_customer_location"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Telfon raqamizi kiriting"
            android:textSize="20sp"
            android:inputType="phone"
            android:layout_margin="10dp"
            android:textColor="@color/black"

            app:layout_constraintTop_toBottomOf="@id/info_customer_location"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/phone_number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 donasi 10000 so'm"
        app:layout_constraintTop_toBottomOf="@id/phone_number"
        app:layout_constraintLeft_toLeftOf="@id/phone_number"
        android:layout_margin="10dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/info_payment_for_a_piece"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:text="Umumiy narx"
        android:id="@+id/info_text_overall_payment"
        app:layout_constraintTop_toBottomOf="@id/info_payment_for_a_piece"
        app:layout_constraintLeft_toLeftOf="@id/info_payment_for_a_piece"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/info_text_overall_payment"
        app:layout_constraintTop_toTopOf="@id/info_text_overall_payment"
        app:layout_constraintBottom_toBottomOf="@id/info_text_overall_payment"
        android:textSize="18sp"
        android:id="@+id/info_overall_payment"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:text="30000 so'm"/>

</androidx.constraintlayout.widget.ConstraintLayout>