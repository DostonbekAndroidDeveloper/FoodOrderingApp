<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#2196F3"
    tools:context=".admin.AdminOrderInfoActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/info_order_item_food_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="8dp"
            android:text="Hot Dog"
            android:textColor="@color/button"
            android:textStyle="bold"
            android:textSize="26sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cost_additional"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/button"
            app:layout_constraintTop_toBottomOf="@id/info_order_item_food_name"
            app:layout_constraintLeft_toLeftOf="@id/info_order_item_food_name"
            app:layout_constraintBottom_toTopOf="@id/info_order_item_food_number"
            android:text="Narxi:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 00 so'm"

            android:textColor="@color/black"
            android:layout_marginStart="4dp"
            android:textSize="22sp"
            android:id="@+id/info_order_item_food_cost"
            app:layout_constraintTop_toBottomOf="@id/info_order_item_food_name"
            android:layout_margin="4dp"
            app:layout_constraintLeft_toRightOf="@id/cost_additional"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yegulik soni:"
            android:textStyle="bold"
            android:textColor="@color/button"
            app:layout_constraintTop_toBottomOf="@id/cost_additional"
            app:layout_constraintLeft_toLeftOf="@id/cost_additional"
            android:textSize="22sp"
            android:id="@+id/number_additional"
            app:layout_constraintBottom_toTopOf="@id/info_order_item_food_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15 ta"

            app:layout_constraintTop_toBottomOf="@id/info_order_item_food_cost"
            app:layout_constraintLeft_toRightOf="@id/number_additional"
            android:textSize="22sp"
            android:layout_marginStart="4dp"
            android:textColor="@color/black"
            android:id="@+id/info_order_item_food_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_additional"
            app:layout_constraintTop_toBottomOf="@id/number_additional"
            app:layout_constraintBottom_toTopOf="@id/info_customer_phone_number"
            android:textSize="22sp"

            android:textColor="@color/button"
            android:textStyle="bold"
            android:text="Manzil:"
            app:layout_constraintLeft_toLeftOf="@id/number_additional"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xoji ota "

            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/info_order_item_food_number"
            app:layout_constraintLeft_toRightOf="@id/location_additional"
            android:textSize="22sp"
            android:layout_marginStart="4dp"
            android:id="@+id/info_order_item_food_location"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/location_additional"
            app:layout_constraintBottom_toTopOf="@id/info_customer_home_Number"
            app:layout_constraintLeft_toLeftOf="@id/location_additional"
            android:id="@+id/phoneNumber_additional"
            android:textSize="22sp"
            android:textStyle="bold"

            android:textColor="@color/button"
            android:text="Telefon Raqam:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/info_order_item_food_location"
            app:layout_constraintLeft_toRightOf="@id/phoneNumber_additional"

            android:textColor="@color/black"
            android:text="+998910446710"
            android:textSize="22sp"

            android:id="@+id/info_customer_phone_number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/phoneNumber_additional"
            app:layout_constraintBottom_toTopOf="@id/info_totalPayment"
            app:layout_constraintLeft_toLeftOf="@id/phoneNumber_additional"
            android:id="@+id/homeNumberAdditional"
            android:textStyle="bold"
            android:textSize="22sp"

            android:textColor="@color/button"
            android:text="Uy raqami:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info_customer_phone_number"
            android:text="273"

            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@id/homeNumberAdditional"
            android:layout_marginStart="4dp"

            android:id="@+id/info_customer_home_Number"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/homeNumberAdditional"
            app:layout_constraintLeft_toLeftOf="@id/homeNumberAdditional"


            android:textSize="22sp"

            android:textColor="@color/button"
            android:textStyle="bold"
            android:id="@+id/totalCostAdditional"
            android:text="Umumiy Narx:"/>

        <TextView
            android:id="@+id/info_totalPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="32222"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginStart="4dp"
            app:layout_constraintLeft_toRightOf="@id/totalCostAdditional"

            app:layout_constraintTop_toBottomOf="@id/info_customer_home_Number" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"

            android:backgroundTint="@color/button"
            android:id="@+id/info_decline"
            app:layout_constraintLeft_toRightOf="@id/info_accept"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="Bekor qilish"
            app:layout_constraintTop_toBottomOf="@id/totalCostAdditional"/>
        <Button
            android:id="@+id/info_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/button"
            app:layout_constraintBottom_toBottomOf="@id/info_decline"
            app:layout_constraintTop_toTopOf="@id/info_decline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/info_decline"
            android:text="Qabul qilish"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/totalCostAdditional"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="22sp"
            android:backgroundTint="@color/button"
            android:visibility="invisible"
            android:layout_marginBottom="5dp"
            android:id="@+id/info_main_text"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            />





</androidx.constraintlayout.widget.ConstraintLayout>